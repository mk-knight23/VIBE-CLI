{
  "name": "vibe-ai-cli",
  "version": "9.0.0",
  "description": "Ultimate AI Development Platform v9.0 - Multi-Agent Orchestration, Extended Thinking, Semantic Memory, Team Collaboration, Advanced Security",
  "main": "dist/cli/index.js",
  "bin": {
    "vibe": "bin/vibe.js",
    "vibe9": "bin/vibe.js"
  },
  "vibe-ecosystem": {
    "compatible_cli": "9.x",
    "compatible_extension": "5.x",
    "compatible_web": "2.x",
    "minimum_node_version": "18.0.0",
    "breaking_changes": {
      "9.0.0": [
        "Memory format changed: store.json → store.db",
        "Provider API responses now include 'thinking' field",
        "Web search moved to optional feature (disabled by default)",
        "Multi-agent execution requires additional memory",
        "Custom instructions now use .vibe/ directory structure"
      ]
    },
    "migration_guide": "https://docs.vibe-ai.dev/v9-migration",
    "new_features": {
      "9.0.0": [
        "Multi-agent orchestration with 5 specialized roles",
        "Extended thinking support for complex reasoning",
        "Web search integration with credibility scoring",
        "Smart model router with 10+ 2025 models",
        "Real-time streaming UI with cost tracking",
        "Plan mode with Mermaid diagrams",
        "BDD test generation and self-healing tests",
        "Advanced security scanning with CVE integration",
        "Semantic memory search with embeddings",
        "Team collaboration with shared context"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:v8": "tsc && echo '✅ v8.0.2 Ultimate Build Complete'",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:security": "vitest run tests/security",
    "test:performance": "vitest run tests/performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:e2e",
    "test:acceptance": "node scripts/acceptance.js",
    "test:coverage": "vitest run --coverage",
    "start": "node bin/vibe.js",
    "dev": "tsc --watch"
  },
  "keywords": [
    "ai",
    "cli",
    "assistant",
    "openrouter",
    "megallm",
    "agentrouter",
    "routeway",
    "code-generation",
    "chatbot",
    "developer-tools",
    "multi-provider",
    "llm",
    "gpt",
    "claude",
    "gemini",
    "deepseek",
    "automation",
    "workflow",
    "templates",
    "scaffolding",
    "performance",
    "monitoring",
    "multi-file-editing",
    "advanced-agents",
    "devops",
    "cloud",
    "debugging",
    "docker",
    "kubernetes",
    "vercel",
    "aws",
    "firebase",
    "v8",
    "production",
    "story-memory",
    "chat-history",
    "code-analysis",
    "refactoring",
    "security-scan",
    "auto-testing",
    "documentation-gen",
    "code-migration",
    "bundle-optimization"
  ],
  "author": "KAZI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mk-knight23/vibe.git",
    "directory": "vibe-cli"
  },
  "bugs": {
    "url": "https://github.com/mk-knight23/vibe/issues"
  },
  "homepage": "https://github.com/mk-knight23/vibe#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.13.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fast-glob": "^3.3.2",
    "inquirer": "^13.1.0",
    "node-fetch": "^3.3.2",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "react-router-dom": "^7.10.1",
    "simple-git": "^3.27.0",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.2.1",
