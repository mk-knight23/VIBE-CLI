{
  "name": "vibe-ai-teammate",
  "version": "0.0.2",
  "description": "VIBE CLI - AI Developer Teammate. One command, infinite capability.",
  "main": "dist/index.js",
  "bin": {
    "vibe": "bin/vibe.js"
  },
  "vibe": {
    "version": "0.0.2",
    "architecture": "8-primitives",
    "mcp_enabled": true,
    "minimum_node_version": "20.0.0",
    "breaking_changes": {
      "0.0.1": [
        "Single command 'vibe' only - no subcommands exposed to users",
        "Intent-driven natural language - no slash commands",
        "MCP-first context architecture",
        "8 primitives instead of 60+ scattered tools",
        "Simplified LLM providers (5 instead of 75+)"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:v0.0.1": "tsc && echo 'âœ… VIBE v0.0.1 Build Complete'",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:ci": "vitest run --reporter=default",
    "test:coverage": "vitest run --coverage",
    "start": "npm run build && node bin/vibe.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "cli",
    "developer-tools",
    "tui",
    "terminal",
    "llm",
    "agent",
    "one-command",
    "mcp",
    "model-context-protocol",
    "intent-driven",
    "natural-language",
    "ai-engineer",
    "code-generation",
    "refactoring",
    "automation",
    "vibe-cli"
  ],
  "author": "KAZI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mk-knight23/VIBE-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/mk-knight23/VIBE-CLI/issues"
  },
  "homepage": "https://github.com/mk-knight23/VIBE-CLI",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.3",
    "inquirer": "^13.2.0",
    "node-fetch": "^3.3.2",
    "ora": "^9.0.0",
    "picocolors": "^1.1.1",
    "react-router-dom": "^7.12.0",
    "simple-git": "^3.30.0",
    "uuid": "^11.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.6",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "madge": "^8.0.0",
    "nodemon": "^3.1.11",
    "ts-unused-exports": "^11.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "type": "commonjs",
  "types": "./dist/cli/index.d.ts"
}
